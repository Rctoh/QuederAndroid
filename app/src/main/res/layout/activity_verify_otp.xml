<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyOTP"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/VObackArrowIB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="41dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/VOtitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/VObackArrowIB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/dmsans_medium"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:text="Verify Code"/>

    <TextView
        android:id="@+id/VOsubTextTV"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/VOtitleTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/mulish_medium"
        android:textSize="16sp"
        android:textColor="@color/SubText"
        android:lineSpacingExtra="8sp"
        android:translationY="3.96sp"
        android:gravity="center_horizontal|bottom"

        />

    <ProgressBar
        android:id="@+id/VOprogressBarPB"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/VOsubTextTV"
        android:layout_marginTop="46dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/VOcodeLayoutLL"
        android:layout_width="312dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@id/VOsubTextTV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/VOcard1MCV"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:backgroundTint="@color/CardBackground"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            android:layout_marginEnd="21.75dp"
            app:cardCornerRadius="12dp">

            <EditText
                android:id="@+id/VOinput1ET"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/transparent"
                android:fontFamily="@font/mulish_regular"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:inputType="number"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/VOcard2MCV"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:backgroundTint="@color/CardBackground"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            android:layout_marginEnd="21.75dp"
            app:cardCornerRadius="12dp">

            <EditText
                android:id="@+id/VOinput2ET"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/transparent"
                android:fontFamily="@font/mulish_regular"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:inputType="number"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/VOcard3MCV"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:backgroundTint="@color/CardBackground"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            android:layout_marginEnd="21.75dp"
            app:cardCornerRadius="12dp">

            <EditText
                android:id="@+id/VOinput3ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:fontFamily="@font/mulish_regular"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/VOcard4MCV"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:backgroundTint="@color/CardBackground"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            android:layout_marginEnd="21.75dp"
            app:cardCornerRadius="12dp">

            <EditText
                android:id="@+id/VOinput4ET"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/transparent"
                android:fontFamily="@font/mulish_regular"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:inputType="number"/>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/VOcard5MCV"
            android:layout_width="45dp"
            android:layout_height="54dp"
            android:backgroundTint="@color/CardBackground"
            android:outlineSpotShadowColor="@color/transparent"
            android:outlineAmbientShadowColor="@color/transparent"
            app:cardCornerRadius="12dp">

            <EditText
                android:id="@+id/VOinput5ET"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/transparent"
                android:fontFamily="@font/mulish_regular"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:maxLength="1"
                android:inputType="number"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <TextView
        android:id="@+id/VOresendCodeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/VOcodeLayoutLL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/mulish_semibold"
        android:textSize="16sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>