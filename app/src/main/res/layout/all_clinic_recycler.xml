<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="25dp"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ACRimageCV"
        android:layout_width="220dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="5dp"
        android:outlineSpotShadowColor="@color/transparent"
        android:outlineAmbientShadowColor="@color/transparent">

        <ImageView
            android:id="@+id/ACRimageIV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/ACRclinicNameTV"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ACRimageCV"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cera_pro_regular"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text=""
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"/>
    
    <LinearLayout
        android:id="@+id/ACRdetailsLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ACRclinicNameTV"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="9.5dp"
            android:layout_height="9.5dp"
            android:src="@drawable/ic_location"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="0.8dp"
            android:foregroundGravity="center_vertical"/>

        <TextView
            android:id="@+id/ACRtownTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cera_pro_regular"
            android:textSize="13sp"
            android:textColor="@color/GraySubText"
            android:layout_marginStart="2dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_seperator"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"/>

        <TextView
            android:id="@+id/ACRpriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/cera_pro_regular"
            android:textSize="13sp"
            android:textColor="@color/GraySubText"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_dot_seperator"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"/>

        <TextView
            android:id="@+id/ACRratingTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/cera_pro_regular"
            android:textSize="13sp"
            android:textColor="@color/GraySubText"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="9dp"
            android:layout_height="9dp"
            android:src="@drawable/ic_star"
            android:layout_gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            android:layout_marginTop="0.5dp"
            android:layout_marginStart="1dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ACRqueueTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ACRdetailsLL"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:text="Current in queue:"
        android:fontFamily="@font/cera_pro_regular"
        android:textSize="13sp"/>




</androidx.constraintlayout.widget.ConstraintLayout>